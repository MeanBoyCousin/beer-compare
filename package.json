{
    "name": "beer-compare",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-scripts": "3.4.1",
        "tailwindcss": "^1.6.2"
    },
    "scripts": {
        "build-tailwind": "tailwind build src/assets/styles/tailwind.css -o src/assets/styles/tailwind.bundle.css",
        "watch-tailwind": "chokidar 'src/assets/styles/*.css' --ignore src/assets/styles/tailwind.bundle.css -c 'npm run build-tailwind'",
        "start": "npm-run-all build-tailwind --parallel watch-tailwind start-react",
        "start-react": "react-scripts start",
        "prebuild": "set NODE_ENV=production&&npm run build-tailwind",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "chokidar-cli": "^2.1.0",
        "npm-run-all": "^4.1.5"
    }
}
