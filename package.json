{
    "name": "beer-compare",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "framer-motion": "^2.5.1",
        "humanize-duration": "^3.23.1",
        "react": "^16.13.1",
        "react-countup": "^4.3.3",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.2.0",
        "react-scripts": "^3.4.3",
        "tailwindcss": "^1.6.2"
    },
    "scripts": {
        "build-tailwind": "postcss src/assets/styles/tailwind.css -o src/assets/styles/tailwind.bundle.css",
        "watch-tailwind": "postcss -w src/assets/styles/tailwind.css -o src/assets/styles/tailwind.bundle.css",
        "start": "run-p watch-tailwind start-react",
        "start-react": "react-scripts start",
        "prebuild": "set NODE_ENV=production && npm run build-tailwind",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            "and_chr >= 84",
            "ios >= 12",
            "samsung >= 11",
            "chrome >= 83",
            "edge >= 18",
            "firefox >= 77",
            "safari >= 13",
            "and_uc >= 12",
            "opera >= 68",
            "op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@tailwindcss/custom-forms": "^0.2.1",
        "autoprefixer": "^9.8.6",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^7.1.1"
    }
}
